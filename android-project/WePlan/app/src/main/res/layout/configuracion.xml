<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <EditText
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/caja_configuracion"
                android:id="@+id/nuevoemail"
                android:hint="Nuevo email:"
                android:textColorHint="#868686"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginTop="12dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="cambiar"
                android:layout_marginTop="6dp"
                android:background="#ff8c20"
                android:layout_marginBottom="16dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#636363"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>
            <EditText
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/caja_configuracion"
                android:id="@+id/password1"
                android:hint="Nueva contraseña:"
                android:textColorHint="#FF868686"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginTop="12dp" />
            <EditText
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/caja_configuracion"
                android:id="@+id/password2"
                android:hint="Repite la nueva contraseña:"
                android:textColorHint="#FF868686"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginTop="12dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="cambiar"
                android:layout_marginTop="6dp"
                android:background="#ff8c20"
                android:layout_marginBottom="16dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#636363"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>
            <EditText
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/caja_configuracion"
                android:id="@+id/usuario"
                android:hint="Nuevo usuario:"
                android:textColorHint="#FF868686"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginTop="12dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="cambiar"
                android:layout_marginTop="6dp"
                android:background="#ff8c20"
                android:layout_marginBottom="16dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#636363"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>
            <Button

                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="CAMBIAR FOTO USUARIO"
                android:layout_marginTop="9dp"
                android:background="#ff8c20"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>
   </ScrollView>
</LinearLayout>