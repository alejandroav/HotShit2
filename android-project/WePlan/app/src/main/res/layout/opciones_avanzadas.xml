<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F95">

    <EditText android:id="@+id/distancia"
        android:hint="Max Distancia (Km)"
        android:layout_marginTop="12dp"
        style="@style/login"
        android:textColor="#000000" />
    <EditText android:id="@+id/dinero"
        android:hint="Max Dinero"
        android:layout_marginTop="12dp"
        style="@style/login"
        android:textColor="#000000" />
    <EditText android:id="@+id/fecha"
        android:hint="Fecha limite (DD-MM-YY)"
        android:layout_marginTop="12dp"
        style="@style/login"
        android:textColor="#000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUSCAR"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:background="#ffb52c"/>

</LinearLayout>